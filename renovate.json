{
  "timezone": "America/New_York",
  "extends": [
    "config:base",
    "group:monorepos"
  ],
  "includePaths": [
    "package.json"
  ],
  "schedule": [
    "every weekend"
  ],
  "semanticCommits": "auto",
  "rangeStrategy": "bump",
  "rebaseLabel": "rebase",
  "rebaseWhen": "auto",
  "requiredStatusChecks": [],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "packagePatterns": [
        "eslint"
      ],
      "groupName": "eslint"
    }
  ]
}
